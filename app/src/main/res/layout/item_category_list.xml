<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="10dp"
    android:layout_marginStart="10dp"
    android:id="@+id/cv_categoryContainer"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_category_list"
            android:layout_width="110dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/desktop2" />

        <TextView
            android:id="@+id/txt_device_name"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/img_category_list"
            android:text="DELL Desktop Computer OptiPlex 3060 KM82W Intel Core i5 8th Gen 8500 " />
        <TextView
            android:id="@+id/txt_device_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_device_name"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@id/img_category_list"
            android:text="200.KD" />


        <TextView
            android:id="@+id/txt_device_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_device_price"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@id/img_category_list"
            android:text="200.KD" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>