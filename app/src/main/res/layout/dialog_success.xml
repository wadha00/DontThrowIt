<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_margin="14dp"
    android:background="@drawable/shape_white_with_radius_twenty_dp"
    android:padding="20dp">


    <ImageView
        android:id="@+id/iv_dialog_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:src="@drawable/ic_checked" />

    <TextView
        android:id="@+id/tv_dialog_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dialog_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/OriginalProduct"
        android:textColor="@color/mainTextColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_dialog_productName"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_original"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Product name"
        android:textColor="@color/mainTextColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_successDetails"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_productName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/successDetials"
        android:textColor="@color/mainTextColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_productDetails"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_successDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shape_purple_top_tweenty_redius"
        android:gravity="center"
        android:text="@string/productDetails"
        android:textColor="@android:color/white"
        android:textSize="16sp" />




    <TextView
        android:id="@+id/tv_dialog_rescan"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_productDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/rescan"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />
</RelativeLayout>
